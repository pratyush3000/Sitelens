# SiteLens Configuration Template
# Copy this file to .env and fill in your values

# Email Configuration (Required)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
REPORT_EMAIL=recipient@example.com
EMAIL_SERVICE=gmail

# Monitoring Settings (Optional - defaults provided)
MONITOR_INTERVAL=30000
SLOW_THRESHOLD=2000
REQUEST_TIMEOUT=10000
REPORT_HOUR=11
REPORT_MINUTE=9

# Server Configuration (Optional)
PORT=3000
COLLECT_ENDPOINT=http://127.0.0.1:3000/collect

# Data Retention Settings (Optional)
DATA_RETENTION_DAYS=7
MAX_ENTRIES_PER_SITE=1000
CLEANUP_INTERVAL=3600000

# MongoDB Configuration (Required)
MONGO_URI=mongodb://localhost:27017/sitelens
# Or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sitelens
